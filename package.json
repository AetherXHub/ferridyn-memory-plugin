{
  "name": "ferridyn-memory-plugin",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Code plugin for FerridynDB-backed agentic memory",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "test:retrieval": "echo '{\"prompt\": \"test\", \"hook_event_name\": \"UserPromptSubmit\"}' | node scripts/dist/memory-retrieval.mjs",
    "test:commit": "echo '{\"transcript_path\": \"/dev/null\", \"hook_event_name\": \"PreCompact\"}' | node scripts/dist/memory-commit.mjs",
    "test:reflect": "echo '{\"transcript_path\": \"/dev/null\", \"stop_hook_active\": false, \"hook_event_name\": \"Stop\"}' | node scripts/dist/memory-reflect.mjs",
    "test:health": "node scripts/dist/memory-health.mjs",
    "test:stats": "node scripts/dist/memory-stats.mjs"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  }
}
